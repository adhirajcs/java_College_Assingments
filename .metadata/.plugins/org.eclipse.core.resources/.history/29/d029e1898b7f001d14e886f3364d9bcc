package day9;

/* 7. Define the classes for implementing “t1” and “t2”. Write appropriate methods for
accomplishing the above. */

class T1 {
	  private int x;

	  public T1(int x) {
	    this.x = x;
	  }

	  public void increaseX() {
	    // increment x
	    x++;
	    System.out.println("T1: x = " + x);
	  }
	}

	class T2 {
	  private T1 t1;
	  private int previous;

	  public T2(T1 t1) {
	    this.t1 = t1;
	    this.previous = t1.x;
	  }

	  public void printX() {
	    if (t1.x != previous) {
	      // print x if it has changed
	      System.out.println("T2: x = " + t1.x);
	      previous = t1.x;
	    }
	  }
	}

public class q7 {

	public static void main(String[] args) {
		T1 t1 = new T1(0);
		T2 t2 = new T2(t1);

		while (true) {
		  t1.increaseX();
		  t2.printX();
		}

	}

}
