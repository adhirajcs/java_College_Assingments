package day9;

import java.util.Random;

class PingRunnable implements Runnable {
    // Generate a random number generator
    private Random random = new Random();

    @Override
    public void run() {
        while (true) {
            // Sleep for a random interval between 0 and 1000 milliseconds
            try {
                Thread.sleep(random.nextInt(1000));
            } catch (InterruptedException e) {
                e.printStackTrace();
            }

            // Print "ping"
            System.out.println("ping");
        }
    }
}

class PongRunnable implements Runnable {
    // Generate a random number generator
    private Random random = new Random();

    @Override
    public void run() {
        while (true) {
            // Sleep for a random interval between 0 and 1000 milliseconds
            try {
                Thread.sleep(random.nextInt(1000));
            } catch (InterruptedException e) {
                e.printStackTrace();
            }

            // Print "PONG"
            System.out.println("PONG");
        }
    }
}


// driver class
public class q2_1 {

	public static void main(String[] args) {
        // Create two threads, one for "ping" and one for "PONG"
        Thread pingThread = new Thread(new PingRunnable());
        Thread pongThread = new Thread(new PongRunnable());

        // Start the threads
        pingThread.start();
        pongThread.start();
    }
}
